# 4 Seasons Real Estate - GoDaddy Hosting Environment Variables
# Copy this file to .env and update with your actual values

# Server Configuration
NODE_ENV=production
PORT=5000
HOSTING_PROVIDER=godaddy

# GoDaddy Hosting Optimizations
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=15000
NODE_OPTIONS=--max-old-space-size=512
DISABLE_CLUSTER=true
DISABLE_BACKUP_SCHEDULER=true

# Security Keys (Generate strong, unique values for production)
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long
SESSION_SECRET=your-super-secure-session-secret-at-least-32-characters-long
CSRF_SECRET=your-super-secure-csrf-secret-at-least-32-characters-long

# Email Configuration (GoDaddy SMTP)
# Get these credentials from your GoDaddy hosting control panel
SMTP_HOST=smtpout.secureserver.net
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-email@yourdomain.com
SMTP_PASS=your-email-password
SMTP_FROM=your-email@yourdomain.com
SMTP_FROM_NAME=4 Seasons Real Estate

# Email Recipients
CONTACT_EMAIL=your-email@yourdomain.com
AGENT_EMAIL=your-email@yourdomain.com

# Session Configuration
SESSION_NAME=4seasons_sid
SESSION_MAX_AGE=3600000
SESSION_TIMEOUT=28800000
SESSION_INACTIVITY_TIMEOUT=7200000
SESSION_STRICT_IP=false

# File Upload Configuration
FILE_CLEANUP_AGE_HOURS=168

# Rate Limiting
CONTACT_RATE_LIMIT=5
CONTACT_RATE_WINDOW=900000

# Optional: Database (if you migrate from in-memory storage)
# DATABASE_URL=postgresql://username:password@localhost:5432/4seasons

# Optional: Redis (for session storage and caching)
# REDIS_URL=redis://localhost:6379

# Form Processing
ENABLE_FORM_LOGGING=true
ENABLE_EMAIL_CONFIRMATIONS=true

# Security Options
ENABLE_CSRF_ROTATION=false
ALLOW_CONCURRENT_SESSIONS=false

# Analytics (optional)
# GOOGLE_ANALYTICS_ID=your-ga-id
# GOOGLE_TAG_MANAGER_ID=your-gtm-id

# Social Media (for sharing)
# FACEBOOK_APP_ID=your-fb-app-id
# TWITTER_HANDLE=@yourhandle

# Development vs Production flags
ENABLE_DEBUG_LOGGING=false
ENABLE_PERFORMANCE_MONITORING=true