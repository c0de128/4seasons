# Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit the actual .env file to version control
#
# REQUIRED FOR DEVELOPMENT:
# - DATABASE_URL, JWT_SECRET, SESSION_SECRET
# - VITE_SITE_URL (for proper canonical URLs)
#
# REQUIRED FOR PRODUCTION:
# - All development variables above
# - VITE_GA_MEASUREMENT_ID (for analytics)
# - VITE_GOOGLE_SITE_VERIFICATION (for Search Console)
# - SMTP_* variables (for contact forms)
# - REDIS_URL (for session storage and rate limiting)
#
# SECURITY NOTE:
# - Use strong random values for all secrets (32+ characters)
# - Keep production values confidential and never commit them

# Application Environment
NODE_ENV=development
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/4seasons_db

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this
REFRESH_TOKEN_EXPIRES_IN=30d

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production

# Security Configuration
ALLOWED_ORIGINS=https://4seasonsrealestate.com,https://www.4seasonsrealestate.com
CSRF_SECRET=your-csrf-secret-change-this

# SEO and Analytics Configuration
# Google Analytics 4 - Get from Google Analytics dashboard
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# Google Search Console verification - Get from Search Console
VITE_GOOGLE_SITE_VERIFICATION=your-verification-code
# Site URL for canonical URLs and structured data
VITE_SITE_URL=https://4seasonsrealestate.com
# Facebook App ID for Open Graph integration (optional)
VITE_FACEBOOK_APP_ID=your-facebook-app-id

# Email Configuration (for contact forms)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
CONTACT_EMAIL=info@4seasonsrealestate.com

# API Keys (if needed)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Site Configuration
SITE_URL=https://4seasonsrealestate.com
ADMIN_EMAIL=admin@4seasonsrealestate.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Redis Configuration (for sessions/caching in production)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=4seasons:

# Performance Monitoring and Analytics
# Sentry for error tracking and performance monitoring
VITE_SENTRY_DSN=
# Hotjar for user behavior analytics (optional)
VITE_HOTJAR_ID=
# Google Tag Manager (if using instead of GA4 directly)
VITE_GTM_ID=GTM-XXXXXXX

# Local SEO Configuration
# Business contact information for consistent NAP data
VITE_BUSINESS_PHONE=(972) 555-0123
VITE_BUSINESS_ADDRESS=123 Main Street, Allen, TX 75013
VITE_BUSINESS_HOURS=Monday-Friday: 9AM-6PM, Saturday: 9AM-4PM

# Legacy Analytics (for backwards compatibility)
GA_MEASUREMENT_ID=G-XXXXXXXXXX
GOOGLE_SITE_VERIFICATION=your-verification-code

# CDN Configuration (optional)
CDN_URL=https://cdn.4seasonsrealestate.com

# Image Optimization
IMAGE_OPTIMIZATION_QUALITY=85
MAX_IMAGE_SIZE_MB=5

# Automated Backup Configuration
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30

# AWS S3 Backup (optional)
AWS_S3_BACKUP_BUCKET=your-backup-bucket
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key